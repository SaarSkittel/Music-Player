<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/notification_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton

            android:id="@+id/close_song_notif_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:src="@drawable/ic_baseline_close_24" />
        <TextView
            android:id="@+id/notification_song_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Media Player"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/notification_txt"
        android:gravity="center">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prev_song_notif_btn"
            android:src="@android:drawable/ic_media_previous"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/green"
            android:background="@drawable/button_shape"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_song_notif_btn"
            android:src="@android:drawable/ic_media_play"
            android:backgroundTint="@color/green"
            android:background="@drawable/button_shape"

            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pause_song_notif_btn"
            android:src="@android:drawable/ic_media_pause"
            android:backgroundTint="@color/green"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next_song_notif_btn"
            android:layout_marginLeft="10dp"
            android:src="@android:drawable/ic_media_next"
            android:backgroundTint="@color/green"
            android:background="@drawable/button_shape"
            />
    </LinearLayout>


</RelativeLayout>